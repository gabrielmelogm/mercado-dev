generator client {
  provider = "prisma-client-js"
  output   = "../../../node_modules/.prisma/client/products"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Products {
  id          String   @id @default(cuid())
  title       String
  description String?
  thumb       String
  price       Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
